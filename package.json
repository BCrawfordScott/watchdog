{
  "name": "watchdog",
  "version": "1.0.0",
  "description": "The team's best friend.",
  "main": "app.js",
  "scripts": {
    "test": "jest --coverage",
    "coverage": "open coverage/lcov-report/index.html",
    "start": "node app.js",
    "server": "nodemon app.js",
    "frontend-install": "npm install --prefix frontend",
    "frontend": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run frontend\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BCrawfordScott/watchdog.git"
  },
  "author": "Brian Crawford Scott",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BCrawfordScott/watchdog/issues"
  },
  "homepage": "https://github.com/BCrawfordScott/watchdog#readme",
  "dependencies": {
    "@babel/core": "^7.5.4",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-winston": "^3.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.4",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "react-redux": "^7.1.0",
    "react-router": "^5.0.1",
    "redux": "^4.0.4",
    "serve-favicon": "^2.5.0",
    "validator": "^13.7.0",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js, jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/keys/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 60,
        "branches": 60,
        "functions": 25
      }
    },
    "testEnvironment": "node"
  }
}
